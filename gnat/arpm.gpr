with "florist";
with "gnatcoll_sqlite";
with "matreshka_league";
project ARPM is 
    for Source_Dirs use ("../src", "../src/c", "../src/db/generated");
    for Main use ("main.adb");
    for Exec_Dir use "../bin";
    for Object_Dir use "../obj";
    for Languages use ("Ada", "C");

    package Linker is 
        for Linker_Options use ("-lrpm", "-lrpmio", "-gnatcoll_sqlite");
        for Switches ("main.adb") use ("-lrpm", "-lrpmio", "-lgnatcoll_sqlite");
    end Linker;
end ARPM;
